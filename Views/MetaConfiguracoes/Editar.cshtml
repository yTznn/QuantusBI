@model QuantusBI.Models.ViewModels.MetaConfiguracaoViewModel

@{
    ViewData["Title"] = "Editar Configuração de Meta";
}

<h2 class="mb-4">Editar Configuração</h2>

<form asp-action="Editar" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpressaoCondicional" class="form-label"></label>
        <input asp-for="ExpressaoCondicional" class="form-control" />
        <span asp-validation-for="ExpressaoCondicional" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoComparacao" class="form-label"></label>
        <input asp-for="TipoComparacao" class="form-control" placeholder="Ex: Direta, Inversa, Intervalar" />
        <span asp-validation-for="TipoComparacao" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Ativa" class="form-check-input" />
        <label asp-for="Ativa" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}