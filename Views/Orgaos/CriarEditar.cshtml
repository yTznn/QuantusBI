@model QuantusBI.ViewModels.OrgaoViewModel


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@{
    ViewData["Title"] = Model.Id == 0 ? "Cadastrar Órgão" : "Atualizar informações";
}

<h2 class="mt-4 mb-3">@ViewData["Title"]</h2>

<form asp-controller="Orgaos" asp-action="CriarEditar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nome" class="form-label">Nome do Órgão</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-building"></i></span>
                <input asp-for="Nome" class="form-control" placeholder="Ex: Instituto de Gestão" />
            </div>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Sigla" class="form-label">Sigla</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-fonts"></i></span>
                <input asp-for="Sigla" class="form-control" placeholder="Ex: IPGSE" />
            </div>
            <span asp-validation-for="Sigla" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="CNPJ" class="form-label">CNPJ</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-file-earmark-text"></i></span>
                <input asp-for="CNPJ" class="form-control" placeholder="Ex: 12.345.678/0001-90" />
            </div>
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Telefone" class="form-label">Telefone</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                <input asp-for="Telefone" class="form-control" placeholder="Ex: (62) 99999-9999" />
            </div>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label">E-mail (opcional)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Ex: contato@orgao.gov.br" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Endereco" class="form-label">Endereço</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                <input asp-for="Endereco" class="form-control" placeholder="Ex: Rua das Flores, 123" />
            </div>
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="col-md-12 form-check mb-3">
            <input asp-for="Ativo" class="form-check-input" />
            <label asp-for="Ativo" class="form-check-label">Órgão Ativo</label>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> @ViewData["Title"]
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}